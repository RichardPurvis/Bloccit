<% if policy(Favorite.new).create? %>
  <div class="favorite">
    <% if favorite = current_user.favorited(post) %>
      <%= link_to [post, favorite], class: 'btn btn-danger', method: :delete do %>
        Unfavorite
      <% end %>
    <% else %>
      <%= link_to [post, Favorite.new], class: 'btn btn-primary', method: :post do %>
        <i> X </i>&nbsp; Favorite
      <% end %>
    <% end %>
  </div>
<% end %>